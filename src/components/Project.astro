---
import type { Repo} from "../types";
import Card from "./Card";
import LinkButton from "./LinkButton.astro";

type Props = {
    repo: Repo
};

const {
    repo: {
        name,
        description,
        stargazers_count,
        html_url: link,
    }
} = Astro.props;
---

<Card
    href={link}
    frontmatter={{
        title: name,
        description: description,
        stargazers_count: stargazers_count,
        pubDatetime: new Date(),
        tags: ["GitHub"],
    }},
    secHeading={false}
/>
